<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/dialogInfo"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Infomation"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Students"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/dialog_sinhvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/al_tensv"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="Tên sinh viên"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dialog_khoahoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/al_nganhhoc"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="Khóa học"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dialog_nganhhoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/al_khoahoc"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif-light"
            android:padding="20dp"
            android:text="Ngành học"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="14sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAlert"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@mipmap/op2"
        app:civ_border_color="#FFF"
        app:civ_border_width="1dp" />
</RelativeLayout>